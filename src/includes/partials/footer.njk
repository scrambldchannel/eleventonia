<footer role="contentinfo">
  <div id="footer--container">
    <div id="footer--left">
        {{ site.name | lower }} 
    </div>
    <div id="footer--middle">
      <a href="{{ site.githubUrl }}" title="Find me on GitHub">
        {% svgsprite %}
        {% icon "github" %}
      </a>
    </div>
    <div id="footer--right"> 
      &copy; {{ site.copyright }}
    </div>
  </div>
</footer>